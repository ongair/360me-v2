<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_main"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_app" >

    <ImageView
        android:id="@+id/app_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_for_splash_screen"
        android:src="@drawable/icon_360_me_180" />

    <LinearLayout
        android:id="@+id/login_linear_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
		
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="source-sans-pro"
            android:text="@string/login"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/login_btn_text"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/line_view" />

        <TextView
            android:id="@+id/act_login_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:fontFamily="source-sans-pro"
            android:gravity="center_horizontal"
            android:text="@string/tour_login_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/login_btn_text" />
		       

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="20dp"
        android:gravity="bottom"
        android:orientation="vertical" >

        <View
            android:id="@+id/vertical_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/linear_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:src="@drawable/login_icon_g_plus" />

            <TextView
                android:id="@+id/login_button"
                android:clickable="true"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/act_btn_login"
                android:gravity="center_horizontal|center_vertical"
                android:padding="0dp"
                android:text="LOGIN"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff" />
    </LinearLayout>

</RelativeLayout>